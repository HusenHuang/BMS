node("master") {
}

pipeline {
     agent any

     stages {
         stage('部署阶段') {
            steps {
               sh '/usr/local/bin/kubectl -n bms set image deployment ${projectName} ${projectName}=${projectName}:${projectVersion} --record'
            }
        }

        stage('完成阶段') {
            steps {
               sh "echo ${projectName} OK ${projectVersion}"
            }
        }
     }
}